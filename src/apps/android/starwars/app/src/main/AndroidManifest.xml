<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.assignment.philo.starwars">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".CharacterDetailFragment$CharacterListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CharacterDetailActivity"
            android:label="@string/title_character_detail"
            android:parentActivityName=".CharacterDetailFragment$CharacterListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.assignment.philo.starwars.generatedIR.debug.src.main.graphql.com.apollographql.apollo.swapi.CharacterListActivity" />
        </activity>

        <activity
            android:name=".FilmDetailFragment$FilmListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.support.PARENT_ACTIVITY" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FilmDetailActivity"
            android:label="@string/title_character_detail"
            android:parentActivityName=".FilmDetailFragment$FilmListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.assignment.philo.starwars.generatedIR.debug.src.main.graphql.com.apollographql.apollo.swapi.FilmListActivity" />
        </activity>

    </application>

</manifest>